<!doctype html>
<html>
  <head><%- include('partials/head') %></head>
  <body>
    <%- include('partials/header') %>

    <!-- ‚≠ê NEW HERO SECTION -->
    <section class="hero">
      <div class="hero-content">
        <h1>SkillSwap ‚Äì Learn Anything by Sharing Skills</h1>
        <p>Swap your talents, earn credits, and learn new skills from people across the community.</p>
        <a href="/skills" class="hero-btn">Explore Skills</a>
      </div>
    </section>

    <!-- ‚≠ê NEW FEATURES SECTION -->
    <section class="features">
      <h2>Why SkillSwap?</h2>

      <div class="feature-grid">
        <div class="feature-card">
          <h3>üîÑ Skill Exchange</h3>
          <p>Teach what you know and learn what you don‚Äôt ‚Äî all without spending money.</p>
        </div>

        <div class="feature-card">
          <h3>‚ö° Earn Credits</h3>
          <p>Gain credits by teaching others and use them to learn new skills.</p>
        </div>

        <div class="feature-card">
          <h3>üåç Community Powered</h3>
          <p>Connect with learners, creators, and talented individuals around you.</p>
        </div>
      </div>
    </section>

    <!-- ‚≠ê NEW MARQUEE SCROLL SECTION -->
    <section class="marquee-section">
      <div class="marquee">
        <span>
          Web Development ‚Ä¢ Guitar ‚Ä¢ Cooking ‚Ä¢ Python ‚Ä¢ Fitness Training ‚Ä¢ UI/UX ‚Ä¢ Painting ‚Ä¢ Video Editing ‚Ä¢ Photography ‚Ä¢ Public Speaking ‚Ä¢
        </span>
      </div>
    </section>

    <!-- ‚≠ê EXISTING CONTENT -->
    <main class="container">
      <h2>Recent Skills</h2>
      <div class="grid">
        <% recent.forEach(s => { %>
          <div class="card">
            <h3><a href="/skills/<%= s._id %>"><%= s.title %></a></h3>
            <p>By <%= s.teacher.name %></p>

            <% if (currentUser) { %>
              <div class="card">
                <h3>Your Credits: <%= currentUser.credits %></h3>
              </div>
            <% } %>

            <p><%= s.description.substring(0,120) %></p>
          </div>
        <% }) %>
      </div>
    </main>

    <%- include('partials/footer') %>
  </body>
</html>
