
<!doctype html>
<html><head><%- include('partials/head') %></head><body>
<%- include('partials/header') %>
<main class="container">
  <h2><%= skill.title %></h2>
  <p>By <%= skill.teacher.name %></p>
  <p><%= skill.description %></p>
  <% if (currentUser) { %>
    <form method="post" action="/bookings/request/<%= skill._id %>">
      <label>Choose time (ISO): <input name="time" type="datetime-local" required></label>
      <label>Duration (hours): <input name="duration" type="number" value="1" min="1"></label>
      <button type="submit">Request Booking</button>
    </form>
  <% } else { %>
    <p><a href="/auth/login">Login</a> to request booking.</p>
  <% } %>
</main>
<%- include('partials/footer') %></body></html>